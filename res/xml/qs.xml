<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/qs_title" >

    <PreferenceCategory
        android:key="general_category"
        android:title="@string/general_category_title"
        android:summary="@string/general_category_summary" >

        <org.derpfest.support.preferences.SystemSettingListPreference
            android:key="qs_bt_click_behavior"
            android:title="@string/click_bluetooth_tile_behavior_title"
            android:summary="%s"
            android:entries="@array/click_bluetooth_qs_entries"
            android:entryValues="@array/click_bluetooth_qs_values"
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="brightness_category"
        android:title="@string/brightness_category_title" >

	    <org.derpfest.support.preferences.SystemSettingListPreference
            android:key="qs_show_brightness"
            android:title="@string/qs_show_brightness_title"
            android:entries="@array/qs_show_brightness_entries"
            android:entryValues="@array/qs_show_brightness_values"
            android:defaultValue="1" />

        <org.derpfest.support.preferences.SystemSettingSwitchPreference
            android:key="qs_brightness_position_bottom"
            android:title="@string/qs_brightness_position_position_title"
            android:summary="@string/qs_brightness_position_position_summary" 
            android:defaultValue="false" />

        <org.derpfest.support.preferences.SystemSettingSwitchPreference
            android:key="qs_show_auto_brightness"
            android:title="@string/qs_show_auto_brightness_title"
            android:summary="@string/qs_show_auto_brightness_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_header_image_title">

        <Preference
            android:key="qs_header_image"
            android:title="@string/qs_header_image_title"
            android:summary="@string/qs_header_image_summary"
            android:fragment="org.derpfest.customizations.fragment.QsHeaderImageSettings" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="footer_category"
        android:title="@string/footer_category_title"
        android:summary="@string/footer_category_summary" >

        <org.derpfest.support.preferences.SecureSettingSwitchPreference
            android:key="qs_show_data_usage"
            android:title="@string/qs_footer_datausage_title"
            android:summary="@string/qs_footer_datausage_summary"
            android:defaultValue="true" />

        <org.derpfest.support.preferences.SystemSettingSwitchPreference
            android:key="qs_show_edit_button"
            android:title="@string/qs_show_edit_button_title"
            android:summary="@string/qs_show_edit_button_summary"
            android:defaultValue="true" />

        <org.derpfest.support.preferences.SystemSettingSwitchPreference
            android:key="qs_show_settings_icon"
            android:title="@string/qs_show_settings_icon_title"
            android:summary="@string/qs_show_settings_icon_summary"
            android:defaultValue="true" />

        <org.derpfest.support.preferences.SystemSettingSwitchPreference
            android:key="qs_show_power_menu_icon"
            android:title="@string/qs_show_power_menu_icon_title"
            android:summary="@string/qs_show_power_menu_icon_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>
